<Window x:Class="TestWPFApp.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWPFApp"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <Style TargetType="CheckBox">
                <Setter Property="Foreground" Value="Red"/>
            </Style>
            <Style TargetType="Button" BasedOn="{StaticResource BlueButtonStyle}"/>
        </Grid.Resources>
        <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="64,77,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.48,1.476"/>
        <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="64,109,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.472,-0.204"/>
        <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="64,143,0,0" VerticalAlignment="Top"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="255,143,0,0" VerticalAlignment="Top" Width="169"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="255,195,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
